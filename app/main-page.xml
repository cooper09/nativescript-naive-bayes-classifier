<Page xmlns="http://schemas.nativescript.org/tns.xsd" navigatingTo="onNavigatingTo">
  
    <Page.ActionBar>
     <ActionBar title="My App" icon=""></ActionBar>
    </Page.ActionBar>
  
    <StackLayout class="p-20">
        
        <Label text="Hello" class="h2 text-center" textWrap="true"/>
        <ListView items="{{items}}" itemTap="{{ selectItem }}"  row="0"></ListView>
        <Label text="{{item}}" class="h2 text-center" textWrap="true"/>
    </StackLayout>
</Page>
